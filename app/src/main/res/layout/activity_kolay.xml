<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KolayActivity">
 <RelativeLayout
     android:id="@+id/baslik"
     android:layout_alignParentTop="true"
     android:layout_alignParentStart="true"
     android:layout_alignParentLeft="true"
     android:background="#2c3e50"
     android:layout_width="match_parent"
     android:layout_height="50dp">

     <TextView
         android:id="@+id/puan"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Skor:0"
         android:textColor="#ffffff"
         android:textSize="20sp"
         android:layout_centerVertical="true"
         android:layout_marginLeft="10dp"/>



     <TextView
         android:id="@+id/isim_oyun"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="İsim:"
         android:textColor="#ffffff"
         android:textSize="20sp"
         android:layout_centerVertical="true"
         android:layout_alignParentRight="true"
         android:layout_marginRight="10dp"/>





 </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/alt"
        android:layout_below="@+id/baslik"
        android:background="#4A148C"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/anasayfayagit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_action_anasayfa"/>
        <TextView
            android:id="@+id/sorular"
            android:textSize="20sp"
            android:text="Sorular"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:id="@+id/gec"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#1abe9c">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GEÇ"
                android:textColor="#ffffff"
                android:layout_centerInParent="true" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/gecsayi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="#ffffff"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/alt"
        android:background="#2c3e50"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:src="@drawable/ic_action_dogru"
            android:id="@+id/dogru"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#2ecc71"
            android:layout_margin="3dp"
            android:layout_weight="1"/>

        <ImageButton
            android:src="@drawable/ic_action_yanlis"
            android:id="@+id/yanlis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#e74c3c"
            android:layout_margin="3dp"
            android:layout_weight="1" />

    </LinearLayout>
</RelativeLayout>